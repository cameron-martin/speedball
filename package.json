{
  "name": "speedball",
  "version": "0.2.1",
  "description": "A dependency injection library.",
  "main": "dist/cjs/speedball.js",
  "types": "dist/cjs/speedball.d.ts",
  "module": "dist/es2015/speedball.js",
  "scripts": {
    "pretest": "npm run build",
    "test": "npm run test:typescript && npm run test:js",
    "prebuild": "rm -fr dist",
    "test:typescript": "ts-node ./run_tests.ts",
    "build": "tsc -p src && babel dist/es2015 --out-dir dist/cjs && cp dist/es2015/*.d.ts dist/cjs && rollup --format iife --name Speedball --input dist/es2015/speedball.js --output dist/globals/speedball.js",
    "tsc": "tsc",
    "test:js": "mocha --compilers ts:ts-node/register -u tdd test/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cameron-martin/speedball.git"
  },
  "keywords": [
    "dependency-injection",
    "dependency injection"
  ],
  "author": "Cameron Martin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cameron-martin/speedball/issues"
  },
  "homepage": "https://github.com/cameron-martin/speedball#readme",
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/glob": "^5.0.30",
    "@types/lodash": "^4.14.64",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.23",
    "@types/sinon": "^2.2.2",
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.16.0",
    "chai": "^4.0.0",
    "glob": "^7.1.2",
    "lodash": "^4.17.4",
    "mocha": "^3.0.0",
    "rollup": "^0.42.0",
    "rxjs": "^5.4.0",
    "shared-git-hooks": "^1.1.4",
    "sinon": "^2.3.1",
    "ts-node": "^3.0.4",
    "typescript": "^2.3.3"
  }
}
