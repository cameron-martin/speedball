{
  "name": "speedball",
  "version": "0.2.1",
  "description": "A dependency injection library.",
  "main": "dist/es5/speedball.js",
  "types": "dist/es5/speedball.d.ts",
  "jsnext:main": "dist/es6/speedball.js",
  "scripts": {
    "pretest": "npm run build",
    "test": "mocha --compilers ts:ts-node/register -u tdd test/**/*.ts",
    "prebuild": "rm -fr dist",
    "build": "tsc -p src && babel dist/es6 --out-dir dist/es5 && cp dist/es6/*.d.ts dist/es5",
    "typescript": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cameron-martin/speedball.git"
  },
  "keywords": [
    "dependency-injection",
    "dependency injection"
  ],
  "author": "Cameron Martin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cameron-martin/speedball/issues"
  },
  "homepage": "https://github.com/cameron-martin/speedball#readme",
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.41",
    "@types/sinon": "^2.2.2",
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.16.0",
    "chai": "^4.0.0",
    "mocha": "^3.0.0",
    "shared-git-hooks": "^1.1.4",
    "sinon": "^2.3.1",
    "ts-node": "^3.0.4",
    "typescript": "^2.3.3"
  }
}
